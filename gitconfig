[user]
	name = Dana Sherson
	email = robot@dana.sh
[color]
	ui = true
[credential]
	helper = osxkeychain
[core]
	excludesfile = ~/.gitignore
	mergeoptions = --no-edit
	editor = subl -nw
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[help]
	autocorrect = -1
[push]
	default = simple
[alias]
	conflicts = "!git ls-files -u | awk '{print $4}' | sort -u"
	openconflicts = "!git conflicts | xargs grep -nHo '<<<<<<<' | xargs subl -nw"
	unstage = ! bash -lc 'echodo "git reset --"'
	purge = ! bash -lc "gitpurge"
	uncommit = ! bash -lc 'echodo "git reset --soft HEAD^"'
