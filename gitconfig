[user]
	name = Dan Sherson
	email = me@dansherson.com
[color]
	ui = true
[credential]
	helper = osxkeychain
[core]
	excludesfile = ~/.gitignore
	mergeoptions = --no-edit
	editor = subl -nw
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[help]
	autocorrect = -1
[push]
	default = simple
[alias]
	unstage = reset --
	conflicts = "!git ls-files -u | awk '{print $4}' | sort -u"
	ls = log --pretty=format:"%C(yellow)%h%Creset\\ %s%Cblue\\ (%aN)" --decorate
	lsb = !git ls master..HEAD
	purge = "!git checkout master && git pull && git branch --merged | grep -Ev 'master' | xargs -n 1 git branch -d"
	trackuntracked = "!git status --untracked=all --porcelain | grep -e '^??' | colrm 1 3 | xargs git add -N"
	untracknewblank = "!git status --porcelain | grep -e '^AM' | colrm 1 3 | xargs git diff --cached --numstat | grep -E '^0\t0\t' | colrm 1 16 | xargs git reset | true"
  uncommit = reset --soft HEAD^
	alias = ! git config --get-regexp ^alias\\. | sed -e s/^alias\\.// -e s/\\ /\\ =\\ /
