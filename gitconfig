[user]
	name = Dana Sherson
	email = robot@dana.sh
[color]
	ui = true
[credential]
	helper = osxkeychain
[core]
	excludesfile = ~/.gitignore
	mergeoptions = --no-edit
	editor = subl -nw
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[help]
	autocorrect = -1
[push]
	default = simple
[alias]
	unstage = ! git reset --
	conflicts = "!git ls-files -u | awk '{print $4}' | sort -u"
	openconflicts = "!git conflicts | xargs grep -nHo '<<<<<<<' | xargs subl -nw"
	purge = "!git checkout master && git pull origin master && git branch --merged | colrm 1 2 | grep -Ev '^(master|release/.*|demo/.*)$' | xargs git branch -d && git branch -r --merged | colrm 1 2 | grep -Ev '^origin/(master|release/.*|demo/.*)$' | xargs git branch -rd"
	uncommit = ! git reset --soft HEAD^
	alias = ! git config --get-regexp ^alias\\. | sed -e s/^alias\\.// -e s/\\ /\\ =\\ /
	forcepull = !git fetch && git reset --hard origin/$(git rev-parse --abbrev-ref HEAD)
